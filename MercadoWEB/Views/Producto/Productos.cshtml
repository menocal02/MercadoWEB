@{
    ViewData["Title"] = "Lista Productos";
}

<div class="text ">
    <h1 class="text-left text-primary text-si p-2">Lista de Productos</h1>

</div>

<br />

<div class="row mb-3">
    <div class="col-md-12 text-left">
        @*<button class="btn btn-outline-danger">Cancelar</button>*@
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="#modaProductos">Nuevo</button>

    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <table id="dtProductos" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Foto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Existencia</th>
                </tr>
            </thead>
        </table>


    </div>
</div>

<div class="modal fade" id="modaProductos" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">


            <div class="modal-header">
                <h5 class="modal-title">Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="Newfl" accept-charset="UTF-8" method="post" enctype="multipart/form-data" asp-controller="Producto" asp-action="InsertProducto">
                    @*onsubmit="return InsertProducto(this)"*@
                    <div class="row">
                        <div class="col-md-12">
                            <label>Nombre producto</label>
                            <input id="NombreProducto" name="NombreProducto" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Descripción</label>
                            <textarea id="Descripcion" name="Descripcion" rows="2" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Modulo</label>
                            <select id="IdModulo" name="IdModulo" class="form-control">
                                <option value="1">Modulo 1</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Categoria</label> 
                            <select id="IdCategoria" name="IdCategoria" class="form-control">
                                <option value="1">Tecnologia</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Precio</label>
                            <input id="Precio" name="Precio" type="number" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Existencia</label>
                            <input id="Existencia" name="Existencia" type="number" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Existencia minima</label>
                            <input id="ExistenciaMinima" name="ExistenciaMinima" type="number" class="form-control" />
                        </div>
                    </div>
                    <div class="row mt-3    ">
                        <div class="col-md-12">
                            <label>Foto</label>
                            <input id="fuFoto" name="fuFoto" type="file" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-right">
                            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cerrar</button>
                            <button id="btnGuardar" class="btn btn-outline-primary">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/MercadoWEB/Producto/Productos.js"></script>
