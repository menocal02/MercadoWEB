@{
    ViewData["Title"] = "Lista Productos";
}

@model IEnumerable<MercadoWEB.Models.Producto>;

<div class="text ">
    <h1 class="text-left text-primary text-si p-2">Lista de Productos</h1>

</div>

<br />

<div class="row mb-3">
    <div class="col-md-12 text-left">
        @*<button class="btn btn-outline-danger">Cancelar</button>*@
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="#modaProductos">Nuevo</button>

    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Foto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.NombreProducto</td>
                            <td><img href="" width="30" /></td>
                            <td>@p.Descripcion</td>
                            <td>@p.Precio</td>
                        </tr>
                    }
                }
            </tbody>
        </table>


    </div>
</div>

<div class="modal fade" id="modaProductos" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                 <div class="row">
                <div class="col-md-12">
                    <label>Nombre producto</label>
                    <input class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>Descripción</label>
                    <input class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>Categoria</label>
                    <select class="form-control"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>Precio</label>
                    <input type="number" class="form-control" />
                </div>
            </div>
            <div class="row mt-3    ">
                <div class="col-md-12">
                    <label>Foto</label>
                    <input type="file" />
                </div>
            </div>
            </div>
            <div class="modal-footer">
               
                 <div class="row">
                <div class="col-md-12 text-right">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-outline-primary">Guardar</button>
                </div>
            </div>
            </div>
           
           
        </div>
    </div>
</div>