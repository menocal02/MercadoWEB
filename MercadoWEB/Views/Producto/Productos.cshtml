@{
    ViewData["Title"] = "Lista Productos";
}

@model IEnumerable<MercadoWEB.Models.ProductoModel>;

<div class="text ">
    <h1 class="text-left p-2">Lista de Productos</h1>

</div>

<br />

 <div class="row mb-3">
            <div class="col-md-12 text-left">
                @*<button class="btn btn-outline-danger">Cancelar</button>*@
                <button class="btn btn-outline-primary">Nuevo</button>

            </div>
        </div>

<div class="row">
    <div class="col-md-12">

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.NombreProducto</td>
                            <td>@p.Descripcion</td>
                            <td>@p.Precio</td>
                        </tr>
                    }
                }
            </tbody>
        </table>

       
    </div>
</div>
